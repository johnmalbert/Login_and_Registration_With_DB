@{
    ViewData["Title"] = "Home Page";
}
@using LoginRegWDb.Models
@model RegUser
<div class="text-center">
    <h1 class="display-4">Register New User</h1>
</div>
<div class="container">

<form asp-action="NewUser" asp-controller="Home" method="post">
    <div class="form-group">
        <span style="color: red;" asp-validation-for="FirstName"></span>
        <label asp-for="FirstName">First Name</label>
        <input class="form-control" asp-for="FirstName" placeholder="Your Name">
    </div>
    <div class="form-group">
        <span style="color: red;" asp-validation-for="LastName"></span>
        <label asp-for="LastName">Last Name</label>
        <input class="form-control" asp-for="LastName" placeholder="Last Name">
    </div>
    <div class="form-group">
        <span style="color: red;" asp-validation-for="Email"></span>
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email" placeholder="Enter Email">
    </div>
    <div class="form-group">
        <span style="color: red;" asp-validation-for="Password"></span>
        <label asp-for="Password"></label>
        <input class="form-control" asp-for="Password" placeholder="Password">
    </div>
    <div class="form-group">
        <span style="color: red;" asp-validation-for="Confirm"></span>
        <label asp-for="Confirm"></label>
        <input class="form-control" asp-for="Confirm" placeholder="Confirm Password">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>